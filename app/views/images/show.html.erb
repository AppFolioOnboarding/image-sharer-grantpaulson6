<div class="container-fluid p-0">

  <div class="page-body">
    <h2 class="page-header my-3">Viewing <%= @image.name %></h2>

    <div class="alert alert-primary <%= flash[:notice] ? '' : 'collapse' %>"><%= flash[:notice] %></div>

    <img src="<%= @image.url %>" alt="" class="image-show">

    <div class="show-tag-index">
      <% @image.tags.each do |tag| %>
        <%= link_to tag.name, root_url(tag_list: @filter_tags + [tag.name]), class: "tag alert alert-success alert-dismissible fade show" %>
      <% end %>
    </div>
  </div>
</div>
